{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "error",
        "no-unused-vars": "warn",
        "indent": ["error", 2],
        "no-trailing-spaces": "error",
        "eol-last": "error",
        "import/newline-after-import": "error",
        "space-before-function-paren": ["error", "always"],
        "func-names": "off",
        "comma-dangle": ["error", "always-multiline"],
        "implicit-arrow-linebreak": "off"
    },
    "globals": {
        "window": "readonly"
    }
} 